# DHCP Server Configuration for {{ dominio }}
authoritative;

default-lease-time 180;
max-lease-time 3600;

subnet 192.168.56.0 netmask 255.255.255.0 {
    range 192.168.56.50 192.168.56.100;
    option domain-name "{{ dominio }}";
    option domain-name-servers {{ ip_arq }};
    option routers {{ gateway }};
    option subnet-mask 255.255.255.0;
    option broadcast-address 192.168.56.255;
    
    # Reservas est√°ticas pelos MACs do Vagrantfile
    host db.caua.joao.devops {
        hardware ethernet 08:00:27:1A:00:21;  # MAC do Vagrantfile
        fixed-address {{ ip_db }};
    }
    
    host app.caua.joao.devops {
        hardware ethernet 08:00:27:2B:21:00;  # MAC do Vagrantfile
        fixed-address {{ ip_app }};
    }
}
